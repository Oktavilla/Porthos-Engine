table.pages {}
  table.pages .content {
    padding-bottom:2em; }
    table.pages .content .title {
      font-size:16px;
      color:#000;
      font-weight:bold; }
  table.pages .updated_at {
    padding-top:13px;
    font-size:12px;
    color:#777;
    width:130px; }
  table.pages .status {width:80px;}

#workspace #content.datums {
  padding:0; }

.datums .datum {
  padding:20px 60px;
  border-top:1px solid #eee; }
.datums .datum:first-child {border-top:none;}
.datums .datum {
  min-height:3em;
  padding-left:180px;}
  .datums .datum .controls {
    float:left;
    width:100px;
    margin-left:-120px;
    font-size: .928571429em;
    color: #999; }
    .datums .datum .controls a,
    .datums .datum .controls span {
      display:none; }
    .datums .datum:hover .controls *,
    .datums .datum:hover .controls span {
      display:block; }
  .datum .content {}
    .datum .editable {}
      .datum .editable .instructions {
        margin-bottom:.5em; }
      .datum:not(.boolean) .editable label {display:none;}
      .datum.boolean .editable label {margin-top:0;}
      .datum .editable .submit {margin-top:.5em;}
      .datum .editable input + .instructions {margin-top:.5em;}

.datums .image {}
  .datums .image img {
    float:left;
    margin-right:20px; }
  .datums .image .title {
    padding-top:.5em;
    font-weight:bold; }
  .datums .image .caption {
    font-size:.857142857em; }
  .datums .image .add {margin-top:.5em;}

.datum.field_set {}
  .datum.field_set .content .controls {display:none;}
  .datum.field_set .content label {display:block;}
  .datum.field_set .field_datum {margin-bottom:.5em;}

.content_block {}
  .content_block .datums_header {
    font-weight:bold;
    padding:10px 60px;
    font-size:1em;
    text-transform:uppercase;
    background:#f7f7f7; }
  .content_block .add.controls {
    padding:10px 60px 10px 180px; }
  .content_block .sortable {
    list-style:none;
    margin:0; }
    .content_block .sortable li.datum {
      margin:0;
      border-top:1px solid #eee; }
      .content_block .sortable li.datum .controls > .draghandle {
        position:absolute;
        top:0;
        left:0;
        vertical-align:middle;
        width:40px;
        height:50px;
        cursor:move;
        background:transparent url(<%= asset_path 'ui_new.png ' %>) 10px -777px no-repeat; }