<% @page_title = "Bilder, video, ljud och dokument" %>
<% @page_class = 'layout3' %>
<%= render :partial => 'admin/assets/sub_nav' %>
<div id="workspace">
  <div class="header">
  <h1>Ladda upp bilder och video</h1>
</div>
<div id="content">
  <div id="uploader">
    <%= form_for [:admin, @asset], :as => :asset, :url => admin_assets_path_with_session_key(), :html => { :multipart => true, :id => 'upload' } do |f| %>
    <%= render :partial => 'admin/shared/error_messages', :locals => { :object => f.object } %>
    <fieldset id="files">
      <%= f.file_field :file, :size => 15 %>
    </fieldset>
    <fieldset class="submit" id="submit_container">
      <input type="submit" value="<%= t('.submit') %>"> <%= t(:or) %> <%= link_to t(:cancel), admin_assets_path %>
    </fieldset>
    <% end %>
  </div>
</div>
