<%= form_for [:admin, @content_template] do |f| %>
  <%= render 'admin/shared/error_messages', :object => f.object %>

  <%= f.label :label %>
  <%= f.text_field :label %>

  <%= f.label :description %>
  <%= f.text_area :description, :rows => 3 %>

  <div class="contans_input">
    <%= f.label :template_name %>
    <%= f.select :template_name, FieldSetFileTemplate.all.collect { |t| [t.name.titlecase, t.handle] } %>
  </div>

  <div class="submit">
    <%= f.submit t(:save) %>
  </div>
<% end %>