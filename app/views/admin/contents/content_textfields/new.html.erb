<% @page_title = "Skriv ny text" %>
<div id="workspace">
  <div class="header">
    <h1>Skriv ny text</h1>
  </div>
  <div id="content">
    <%= form_for :content, @content, :url => admin_contents_path do |f| %>
      <%= render :partial => '/admin/contents/content_textfields/form', :locals => { :f => f } %>
      <div class="submit">
        <%= submit_tag 'Spara', :class => 'commit button' %> eller
        <%= link_to "Avbryt", previous_view_path, :class => 'cancel' %>
      </div>
    <% end %>
  </div>
</div>