<% @page_title = "Skriv ny text" %>
<div id="workspace">
  <div class="header">
    <h1>Skriv ny text</h1>
  </div>
  <div id="content">
    <%= form_for [:admin, @page, @content], :as => :content, :url => admin_page_contents_path(@page) do |f| %>
    <%= hidden_field_tag :type, @content.class.to_s %>
    <%= f.text_area :body, :class => @content.filter, :class => '', :cols => 90, :rows => 40 %>

      <div class="submit">
        <%= submit_tag 'Spara', :class => 'commit button' %> eller
        <%= link_to "Avbryt", previous_view_path, :class => 'cancel' %>
      </div>
    <% end %>
  </div>
</div>