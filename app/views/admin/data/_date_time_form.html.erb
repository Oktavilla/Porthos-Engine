<div class="viewable">
  <h2><%= datum.label %></h2>
  <div class="content">
    <%= datum.value.in_time_zone.strftime("%Y-%m-%d %H:%M") if datum.value.present? %>
  </div>
</div>
<div class="editable">
  <%= f.label :value, datum.label, :for => "datum_#{datum.id}_value" %>
  <%= f.text_field :value, :value => (datum.value.present? ? datum.value.in_time_zone.strftime("%Y-%m-%d %H:%M") : ''), :id => "datum_#{datum.id}_value" %>
  <input type="submit" value="<%= t(:save) %>" />
</div>