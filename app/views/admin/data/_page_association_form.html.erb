<% if datum._parent_document.is_a?(ContentBlock) %>
<%= hidden_field_tag 'parent_id', datum._parent_document.id %>
<% end %>
<%= f.label :page_id %>
<% if datum.instruction_body %>
  <p class="instructions"><%= datum.instruction_body %></p>
<% end %>
<%= f.select :page_id, datum.targets.collect { |page| [page.title, page.id] } %>