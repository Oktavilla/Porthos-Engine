<% if datum._parent_document.is_a?(DatumCollection) %>
<%= hidden_field_tag 'parent_id', datum._parent_document.id %>
<% end %>
<%= f.label :page_id, for: "datum_#{datum.id}_page_id" %>
<% if datum.instruction_body %>
  <p class="instructions"><%= datum.instruction_body %></p>
<% end %>
<%= f.select :page_id, datum.targets.collect { |page| [page.title, page.id] }, { include_blank: t('choose') }, 'data-placeholder' => t('choose'), :id => "datum_#{datum.id}_page_id", :class => 'choose_me' %>