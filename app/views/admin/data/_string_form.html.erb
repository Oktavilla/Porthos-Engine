<div class="viewable">
  <h2><%= datum.label %></h2>
  <div class="content">
    <%= datum.allow_rich_text? ? datum.value : simple_format(datum.value) %>
  </div>
</div>
<div class="editable">
  <%= f.label :value, datum.label, :for => "datum_#{datum.id}_value" %>
  <div class="fullwidth">
  <% if datum.multiline? %>
    <%= f.text_area :value, :class => (datum.allow_rich_text? ? 'editor' : 'normal'), :id => "datum_#{datum.id}_value" %>
  <% else %>
    <%= f.text_field :value, :id => "datum_#{datum.id}_value" %>
  <% end %>
  </div>
  <div class="submit">
    <%= f.submit t(:save) %>
  </div>
</div>