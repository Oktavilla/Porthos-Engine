<%= f.error_messages %>
<label for="field_set_title">Titel</label>
<%= f.text_field :title %>
<label for="field_set_page_label">Etikett för sidors titelfält</label>
<%= f.text_field :page_label %>
<label for="field_set_handle">Handle</label>
<%= f.text_field :handle %>
<label for="field_set_handle" class="contans-input">
  Template:
  <%= f.select :template_name, PageTemplate.all.collect { |t| [t.name.titlecase, t.handle] } %>
</label>
<label for="field_set_title">Beskrivning</label>
<%= f.text_area :description, :rows => 3 %>
<label for="field_set_pages_sortable" class="contains-input">
  <%= f.check_box :pages_sortable %> Sidor kan sorteras
</label>
<label for="field_set_allow_categories" class="contains-input">
  <%= f.check_box :allow_categories %> Sidor kan kategoriseras
</label>
<label for="field_set_allow_node_placements" class="contains-input">
  <%= f.check_box :allow_node_placements %> Sidor kan placeras i navigationen
</label>