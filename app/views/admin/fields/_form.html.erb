<%= render 'admin/shared/error_messages', :object => f.object %>
<%= hidden_field_tag 'field_type', f.object.class %>
<%= f.label :label %>
<%= f.text_field :label %>

<%= f.label :handle %>
<%= f.text_field :handle %>

<div class="contains_input">
  <%= f.check_box :required %>
  <%= f.label :required %>
</div>

<%= f.label :instructions %>
<%= f.text_area :instructions, :rows => 3 %>

<% begin %>
<%= render :partial => "#{@field.class.to_s.underscore}_form", :locals => { :f => f } %>
<% rescue ActionView::MissingTemplate %>
<% end %>