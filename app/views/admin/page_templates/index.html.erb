<% @page_title = t('.title') %>
<% @page_class = 'layout2' -%>
<% @page_id = 'site-settings' -%>
<div id="sub_nav">
  <%= render 'admin/shared/settings_sub_nav' %>
</div>
<div id="workspace">
  <div class="header">
    <h1><%= t('.title') %></h1>
  </div>
  <div class="tools">
    <div class="add">
      <%= link_to t('.new'), new_admin_page_template_path, :class => "new" %>
    </div>
  </div>
  <div id="content">
  <% if @page_templates.any? -%>
    <table class="sortable">
      <thead>
        <tr>
          <th class="sort"></th>
          <th><%= PageTemplate.human_attribute_name(:title) %></th>
          <th><%= PageTemplate.human_attribute_name(:handle) %></th>
          <th><%= PageTemplate.human_attribute_name(:template_name) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="page_templates" data-sort-uri="<%= sort_admin_page_templates_path %>">
      <% @page_templates.each do |page_template| %>
        <tr id="page_template_<%= page_template.id %>">
          <td class="sort"><span class="drag_handle"></span></td>
          <td class="title"><%= link_to page_template.label, admin_page_template_path(page_template) %></td>
          <td><%= page_template.handle %></td>
          <td><%= page_template.template_name %></td>
          <td><%= link_to t(:edit), edit_admin_page_template_path(page_template, :return_to => admin_page_templates_path) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end -%>
  </div>
</div>