<% @page_title = "Sidor > #{@page.title}" -%>
<% @page_class = "layout3" -%>
<div id="sub_nav">
  <h2 class="label">Publicering</h2>
  <div id="page_publish_on_date">
    <div id="page_current_publish_on_date">
    <% if @page.published_on %>
      <p>Publiceringsdatum: <%= @page.published_on.in_time_zone.strftime("%d %B %Y") %></p>
      <p><a href="#" class="toggle_publish_date">Ändra</a></p>
    <% else %>
      <p><strong><%=t '.not_published' %></strong></p>
      <p><a href="#" class="toggle_publish_date">Välj ett publiceringsdatum</a> eller
      <%= link_to t('.publish_now'), publish_admin_page_path(@page.id), :method => :put, :class => 'new' %></p>
    <% end %>
    </div>
    <%= form_for [:admin, @page], :as => :page, :url => admin_pages_path, :html => { :id => 'page_published_on_form', :style => 'display:none;' } do |f| -%>
      <div>
        <%= f.text_field :published_on, :value => (@page.published_on.present? ? @page.published_on.in_time_zone.to_date : nil), :class => 'date', :placeholder => 'År-Månad-Dag' %>
        <div class="submit">
          <input type="submit" value="Spara publiceringsdatum"> eller <a href="#">avbryt</a>
        </div>
      </div>
    <% end %>
  </div>
  <h2 class="label">Skapad och ändrad</h2>
  <% if @page.created_by -%>
  <p>Skapad av: <%= @page.created_by.name %>.</p>
  <% end -%>
  <p>Senast ändrad: <%= @page.updated_at.strftime("%d %B %Y") %><%= " av #{@page.updated_by.name}" if @page.updated_by %>.</p>

  <% if @page.page_template.allow_categories? -%>
  <h2 class="label">Kategori</h2>
  <div id="page_category">
    <div id="category_view">
      <% if @page.category.present? -%>
      <p><%= @page.category.name %></p>
      <% end -%>
      <p><a href="#" class="change"><%= @page.category.present? ? t('.edit_category') : t('.choose_category') %></a></p>
    </div>
    <%= form_for [:admin, @page], :as => :page, :url => admin_pages_path, :html => { :id => 'choose_page_category_form', :style => 'display:none;' } do |f| -%>
      <div>
        <%= f.select @page.category_method_name, Page.tags_by_count(:namespace => @page.page_template.handle).collect { |t| [t.name.titlecase, "\"#{t.name}\""] }, :include_blank => 'Ingen kategori' %>
        <a href="#" id="new_category"><%= t('.add_new_category') %></a><br>
        <input type="submit" value="<%= t('choose') %>"> <%= t(:or) %> <a href="#" class="cancel"><%= t(:cancel) %></a>
      </div>
    <% end -%>
    <%= form_for [:admin, @page], :as => :page, :url => admin_pages_path, :html => { :id => 'page_categories_form', :style => 'display:none;' } do |f| -%>
      <div>
        <%= f.text_field @page.category_method_name, :value => '' %>
        <input type="submit" value="<%= t(:save) %>"> <%= t(:or) %> <a href="#"><%= t(:cancel) %></a>
      </div>
    <% end -%>
  </div>
  <% end -%>
  <h2 class="label">Nyckelord</h2>
  <div id="page_tags">
    <div id="page_tags_list">
      <p class="tags">
      <%= @page.tags.collect { |tag| link_to(tag.name, admin_pages_path(:tags => (params[:tags] || []).dup.push(tag.name)), :class => 'tag') }.join(', ').html_safe -%>
      </p>
    </div>
    <%= form_for [:admin, @page], :as => :page, :url => admin_pages_path, :html => { :id => 'page_tags_form' } do |f| -%>
      <div>
        <%= f.text_field :tag_names, :autocomplete => 'off' %>
        <div class="submit">
          <input type="submit" value="Spara">
        </div>
      </div>
    <% end -%>
  </div>
</div>
<div id="workspace">
  <div class="header">
    <span class="away">
      <a href="#" class="edit_settings toggler action"><span>Ändra</span></a>
      <% if @page.published? -%>
        <%# link_to "Visa på webbplatsen", page_path(:id => @page.uri, :page_template_id => @page.page_template_id), :class => 'public_link action' %>
      <% else -%>
        <%# link_to "Förhandsgranska", preview_page_path(@page.id), :class => 'public_link action' %>
      <% end -%>
    </span>
    <div class="parents"><%= link_to @page.page_template.label, admin_pages_path(:with_page_template => @page.page_template) %></div>
    <div class="page_title">
      <h1><%= @page.title %></h1>
    </div>
    <% if @page.node -%>
      <div class="navigation">
        <span class="key">Namn i navigationen:</span>
        <span class="value"><%= @page.node.name %></span>
      </div>
      <div class="slug">
        <span class="key">Adress:</span>
        <span class="value"><%= page_url(@page).tap { |url| url.replace(link_to(url, url)) }.html_safe %></span>
      </div>
    <% elsif @page.index_node %>
      <div class="slug">
        <span class="key">Adress:</span>
        <span class="value"><%= page_url(:page_template_id => @page.page_template_id, :id => @page.uri).tap { |url| url.replace(link_to(url, url)) }.html_safe %></span>
      </div>
    <% end %>
  </div>
  <div class="header" style="display:none;">
    <%= form_for @page, :url => admin_page_path(@page.id) do |f| %>
      <%= render :partial => 'admin/shared/error_messages', :locals => { :object => @page } %>
      <label for="page_title" class="first_label"><%= @page.page_template.page_label.present? ? @page.page_template.page_label : "Titel" %></label>
      <div class="fullwidth">
        <%= f.text_field :title, :class => 'title' %>
      </div>
      <div class="uri_field">
        <label for="page_uri">Adress:</label>
        <%= f.text_field :uri %>
      </div>
      <div class="restricted_field">
        <label for="page_restricted">
          <%= f.check_box :restricted %>
          Kräv inlogging för att se denna sida
        </label>
      </div>
      <div class="submit">
        <input type="submit" value="Spara"> eller <a href="#" class="toggler">avbryt</a>
      </div>
    <% end %>
  </div>
  <% if @page.is_a?(Section) %>
  <div class="tools">
    Lägg till:
    <%= link_to StringField.model_name.human, new_admin_page_datum_path(@page, datum: { input_type: 'string' }, type: 'StringField') %>
    <%= link_to t('.date_field'), new_admin_page_datum_path(@page, datum: { input_type: 'date' }, type: 'Field') %>
    <%= link_to t('.boolean_field'), new_admin_page_datum_path(@page, datum: { input_type: 'boolean' }, type: 'Field') %>
    <%= link_to PageAssociation.model_name.human, new_admin_page_datum_path(@page, type: 'PageAssociation') %>
    <%= link_to AssetAssociation.model_name.human, admin_assets_path(create_callback: { path: admin_page_data_path(@page, type: 'AssetAssociation'), method: 'post', asset_field_name: 'datum[asset_id]' }) %>
    <%= link_to ContentBlock.model_name.human, new_admin_page_datum_path(@page, type: 'ContentBlock') %>
    <% ContentTemplate.all.each do |content_template| %>
      <%= link_to content_template.label, new_admin_page_datum_path(@page, :type => 'FieldSet', :template_id => content_template) %>
    <% end %>
  </div>
  <% end %>
  <div id="content" class="datums">
  <% @page.data.each_with_index do |datum, index| %>
    <div id="datum_<%= datum.id %>" class="<%= "datum " unless datum.is_a?(ContentBlock) %><%= datum.class.to_s.underscore %><%= " #{datum.input_type}" if datum.respond_to?(:input_type) %>">
    <% unless datum.is_a?(ContentBlock) %>
      <div class="controls">
        <div class="label"><%= datum.label %></div>
      </div>
      <div class="content">
        <div class="viewable">
          <%= render :partial => "admin/data/#{(datum.is_a?(StringField) ? 'field' : datum.class.to_s.underscore)}", :locals => { :datum => datum }%>
        </div>
        <% unless datum.is_a?(AssetAssociation) %>
        <div class="editable">
          <%= form_for [:admin, @page, datum], :as => :datum, :url => admin_page_datum_path(@page, datum), :html => { :id => "datum_#{datum.id}_edit" } do |f| %>
            <%= render :partial => "admin/data/#{(datum.is_a?(StringField) ? 'field' : datum.class.to_s.underscore)}_form", :locals => { :datum => datum, :f => f }%>
            <div class="submit">
              <%= f.submit t(:save) %>
            </div>
          <% end %>
        </div>
        <% end -%>
      </div>
    <% else %>
      <div class="datums_header"><%= datum.label %></div>
      <div class="add controls">
        <h3 class="new"><%= t('.add_content') %></h3>
        <ul>
          <% if datum.allow_texts? %>
          <li>
            <%= form_for [:admin, @page, StringField.new(:input_type => 'string', :multiline => true, :allow_rich_text => true)], :as => :datum,  :url => admin_page_data_path(@page, :parent_id => datum, :type => 'StringField') do |f| %>
              <%= f.hidden_field :input_type %>
              <%= f.hidden_field :multiline %>
              <%= f.hidden_field :allow_rich_text %>
              <button type="submit"><%= StringField.model_name.human %></button>
            <% end %>
          </li>
          <% end %>
          <% if datum.allowed_page_template_ids? %>
            <% datum.allowed_page_templates.each do |page_template| %>
              <li>
              <%= form_for [:admin, @page, PageAssociation.new(:page_template_id => page_template.id)], :as => :datum,  :url => admin_page_data_path(@page, :parent_id => datum, :type => 'PageAssociation') do |f| %>
                <%= f.hidden_field :page_template_id %>
                <button type="submit"><%= t('.add_datum', :label => page_template.label) %></button>
              <% end %>
              </li>
            <% end %>
          <% end %>
          <% if datum.allowed_asset_filetypes.any? %>
            <% datum.allowed_asset_filetypes.each do |filetype| %>
              <li>
              <%= link_to t('.add_datum', :label => t(:"mongo_mapper.attributes.asset.filetypes.#{filetype}")),
                          admin_assets_path(:by_filetype => [filetype],
                            :create_callback =>
                              { :path => admin_page_data_path(@page, :parent_id => datum, :type => 'AssetAssociation'),
                                :method => 'post',
                                :asset_field_name => 'datum[asset_id]' }) %>
              </li>
            <% end %>
          <% end %>
        <% datum.content_templates.each do |content_template| %>
          <li>
            <%= button_to content_template.label, admin_page_data_path(@page, :parent_id => datum, :type => 'FieldSet', :template_id => content_template) %>
          </li>
        <% end %>
        </ul>
      </div>
      <ul class="sortable" data-sort-uri="<%= sort_admin_page_data_path(@page, :parent_id => datum) %>">
        <% datum.data.each do |d, i| %>
        <li id="datum_<%= d.id %>" class="datum <%= d.class.to_s.underscore %><%= ' inactive' unless d.active? %>">
          <div class="controls">
            <%= link_to d.active? ? 'Dölj' : 'Visa', toggle_admin_page_datum_path(@page, d, :parent_id => datum), :method => :put, :class => 'visibility' %>
            <%= link_to "Ta bort", admin_page_datum_path(@page, d, :parent_id => datum), :method => :delete, :confirm => "Är du säker? Detta går inte att ångra.", :class => 'delete' %>
          </div>
          <div class="content">
            <div class="viewable">
              <%= render :partial => "admin/data/#{(d.is_a?(StringField) ? 'field' : d.class.to_s.underscore)}", :locals => { :datum => d }%>
            </div>
            <% unless d.is_a?(AssetAssociation) %>
            <div class="editable">
              <%= form_for [:admin, @page, d], :as => :datum, :url => admin_page_datum_path(@page, d), :html => { :id => "datum_#{d.id}_edit" } do |f| %>
                <%= render :partial => "admin/data/#{(d.is_a?(StringField) ? 'field' : d.class.to_s.underscore)}_form", :locals => { :datum => d, :f => f }%>
                <div class="submit">
                  <%= f.submit t(:save) %>
                </div>
              <% end %>
            </div>
            <% end %>
          </div>
        </li>
      <% end %>
      </ul>
    <% end %>
    <% if @page.is_a?(Section) %>
      <span class="edit">
        <%= link_to datum.active? ? 'Dölj' : 'Visa', toggle_admin_page_datum_path(@page, datum), :method => :put, :class => 'visibility' %>
        <%= link_to "Ta bort", admin_page_datum_path(@page, datum), :method => :delete, :confirm => "Är du säker? Detta går inte att ångra.", :class => 'delete' %>
      </span>
    <% end %>
    </div>
  <% end %>
  </div>
</div>
