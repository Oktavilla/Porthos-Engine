<% @page_title = 'Vidarebefordringar' -%>
<% @page_class = 'layout2' -%>
<% @page_id = 'site-settings' -%>
  <div id="sub_nav">
    <%= render :partial => 'admin/shared/settings_sub_nav' %>
  </div>
  <div id="workspace">
    <div class="header">
      <h1>Vidarebefordringar</h1>
    </div>
    <div class="tools">
      <div class="add">
        <%= link_to "Skapa ny vidarebefordring", new_admin_redirect_path, :class => 'new' %>
      </div>
    </div>
    <div id="content">
      <% if @redirects.any? %>  
        <table>
          <tr>
            <th>Från</th>
            <th>Till</th>
            <th></th>
            <th></th>
          </tr>
        <% @redirects.each do |redirect| %>  
          <tr class="<%= cycle 'odd', 'even' %>">
            <td><%= link_to redirect.path, redirect.path %></td>
            <td>&rarr; <%= link_to redirect.target, redirect.target %></td>
            <td><%= link_to "Ändra", edit_admin_redirect_path(redirect) %></td>
            <td><%= link_to "Radera", admin_redirect_path(redirect), :method => :delete, :class => 'delete', :confirm => 'Är du säker?' %></td>
          </tr>
        <% end %>
        </table>
      <% else %>
        <p class="blank-slate">Det finns inga vidarebefordringar inlagda än.</p>
      <% end %>
    </div>
  </div>