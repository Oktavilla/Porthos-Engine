<% @page_class = @renderer.layout_class -%>
<% @page_title = @renderer.title -%>
<% @page_id    = @renderer.page_id -%>
<div id="content">
  <h1><%= @renderer.title %></h1>
  <ul>
  <% @renderer.pages.each do |page| %>
    <li>
      <h2><%= link_to page.title, "/#{page.index_node.slug}/#{page.published_on.strftime("%Y/%m/%d")}/#{page.to_param}" %></h2>
      <p><%= page.description %> <span class="date"><%= l page.published_on, :format => :long %></span></p>
    </li>
  <% end %>
  </ul>
  <%= render :partial => 'pages/templates/blog/archive', :locals => { :renderer => @renderer } %>
</div>
