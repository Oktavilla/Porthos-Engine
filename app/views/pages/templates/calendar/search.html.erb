<% @page_title = "Sök"  -%>
<% @page_id = 'pages-search' -%>
<div id="content">
  <h1>Sök</h1>
  <% form_for :search, :url => '?', :html => { :method => :get } do |f| %>
    <label for="search_query">Sök:</label>
    <%= text_field_tag :query, (@query || ''), :class => "search_query", :id=> "search_query" %>
    <%= submit_tag "Sök" %>
  <% end %>
  <% if @search %>
    <% if @search.total > 0 %>
      <p>På din sökning på ”<%= @query %>” hittas <%= @search.total %> sidor</p>
      <ul>
      <% @search.results.each do |page| %>
        <li>
          <h2><%= link_to page.title, (page.node ? "/#{page.node.slug}" : "/#{page.index_node.slug}/#{page.to_param}" ) %></h2>
        </li>
      <% end %>
      </ul>
    <% else %>
    <p>Inga sidor hittades på sökningen ”<%= @query %>”</p>
    <% end %>
  <% end %>
</div>